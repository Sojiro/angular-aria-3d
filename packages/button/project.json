{
  "name": "button",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/button/src",
  "prefix": "aa3d",
  "projectType": "library",
  "release": {
    "version": {
      "manifestRootsToUpdate": ["dist/{projectRoot}"],
      "currentVersionResolver": "git-tag",
      "fallbackCurrentVersionResolver": "disk"
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/button/ng-package.json",
        "tsConfig": "packages/button/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/button/tsconfig.lib.prod.json"
        },
        "development": {}
      },
      "defaultConfiguration": "production"
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/button/jest.config.cts",
        "tsConfig": "packages/button/tsconfig.spec.json"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "configDir": "packages/button/.storybook",
        "browserTarget": "button:build-storybook-deps",
        "compodoc": false,
        "styles": ["packages/core/src/lib/surface/aa3d-surface.scss"],
        "port": 4400
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "configDir": "packages/button/.storybook",
        "browserTarget": "button:build-storybook-deps",
        "compodoc": false,
        "styles": ["packages/core/src/lib/surface/aa3d-surface.scss"],
        "outputDir": "dist/storybook/button"
      }
    },
    "build-storybook-deps": {
      "executor": "nx:noop"
    }
  }
}
